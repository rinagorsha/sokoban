.console
	height 485px
	overflow hidden
	color #fff
	font-size 20px
	line-height 1.3
	font-family monospace
	background-color #1e1e1e
	padding 20px
	position relative // to calc offsetParent
	&__title
		margin-bottom 40px
	&__canvas
		letter-spacing 2px
		white-space pre

.menu
	&__item
		padding 4px 0
		position relative // to calc offsetParent
		&.active
			color #1e1e1e
			background-color #eee

.hidden
	display none