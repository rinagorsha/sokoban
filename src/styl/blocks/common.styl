.console
	height 730px
	overflow hidden
	color #fff
	font-size 19px
	line-height 1.27
	font-family monospace
	background-color #1e1e1e
	padding 20px 20px 10px
	position relative // to calc offsetParent
	&__title
		margin-bottom 20px
	&__canvas
		letter-spacing 2px
		white-space pre
	&__footer
		margin-top 20px

.console-stats
	&__item
		margin-right 15px
		vertical-align middle
		display inline-block
		&:last-child
			margin-right 0

.menu
	&__item
		padding 4px 0
		position relative // to calc offsetParent
		&.active
			color #1e1e1e
			background-color #eee

.hidden
	display none